@model Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Path for your custom CSS -->
    <title>@ViewData["Title"]</title>
</head>

<style>
    body {
        font-family: 'Arial', sans-serif; /* Clean, modern font for the body */
    }

    .card {
        border: none; /* Remove card border for a sleeker appearance */
    }

    h2, h3 {
        color: #333; /* Darker color for headings */
    }

    .list-group-item {
        background-color: #f9f9f9; /* Subtle background for list items */
    }

    .badge {
        font-size: 1rem; /* Slightly larger font for prices */
    }
</style>
<body class="bg-light">
    <div class="container my-5">
        <div class="text-center mb-4">
            <h2 class="font-weight-bold">Order Confirmation</h2>
            <p class="lead">Your order has been placed successfully!</p>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title">Ordered Products:</h3>
                <ul class="list-group">
                    @foreach (var product in Model.Products)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @product.Name 
                            <span class="badge badge-primary">@product.Price.ToString("C")</span> <!-- Format as currency -->
                        </li>
                    }
                </ul>
                <h4 class="mt-3">Total Price: <span class="text-success">@Model.TotalPrice.ToString("C")</span></h4>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-success btn-lg">Return to Home</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>


</html>